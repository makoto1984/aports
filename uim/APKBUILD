# Contributor:
# Maintainer:
# Warning: change JOBS to 1 to avoid build error!
pkgname=uim
pkgver=1.8.8
pkgrel=0
pkgdesc="A multilingual input method framework"
url="https://github.com/uim/uim"
arch="all"
license="BSD"
depends="gtk+2.0 gtk+3.0 qt5-qtx11extras libedit anthy"
makedepends="gtk+2.0-dev gtk+3.0-dev qt5-qtx11extras-dev libtool gettext-dev libedit-dev anthy-dev"
install="$pkgname.post-install $pkgname.post-deinstall"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="https://github.com/uim/uim/releases/download/1.8.8/uim-1.8.8.tar.bz2"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--with-anthy-utf8 \
		--with-qt5-immodule \
		--enable-dict
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="2257ae48f4f2b79039a5f6be0fc740e218d5609e004dad9a5a1aa5d4066587ee59d0be06bc23c7d567a48901466227fedc4778b480f7184d84b0b3b4dddac9a3  uim-1.8.8.tar.bz2"
