# Contributor:
# Maintainer:
pkgname=libpinyin
pkgver=2.6.1
pkgrel=0
pkgdesc="Library to deal with pinyin."
url="https://github.com/libpinyin/libpinyin"
arch="all"
license="GPL-3.0"
depends=""
makedepends="glib-dev db-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="https://github.com/libpinyin/libpinyin/releases/download/2.6.1/libpinyin-2.6.1.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--enable-libzhuyin \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}
sha512sums="
